<odoo>
    <data noupdate="1">
        <record id="waste_type_raw_material" model="waste.type">
            <field name="name">Raw Material Waste</field>
            <field name="description">Waste generated from unused or rejected raw materials.</field>
        </record>
        <record id="waste_type_half_product" model="waste.type">
            <field name="name">Half-Finished Product Waste</field>
            <field name="description">Waste from defective or unfinished products during production.</field>
        </record>
        <record id="waste_type_finished_goods" model="waste.type">
            <field name="name">Finished Goods Waste</field>
            <field name="description">Rejected finished goods that cannot be sold or reused.</field>
        </record>
        <record id="waste_type_hazardous" model="waste.type">
            <field name="name">Hazardous Waste</field>
            <field name="description">Waste that poses a risk to health or the environment, e.g., chemicals.</field>
        </record>
    </data>
</odoo>
